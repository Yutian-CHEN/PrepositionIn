<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal">

        <Button
            android:id="@+id/run"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/my_button2"
            android:text="run"
            android:visibility="visible" />

        <Button
            android:id="@+id/put"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/my_button6"
            android:text="Put"
            android:visibility="visible" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal">

        <TableLayout
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:gravity="center_vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animationCache="false"
                android:gravity="center_vertical|center_horizontal">

                <Button
                    android:id="@+id/get_in"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/my_button4"
                    android:text="Get In"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <Button
                    android:id="@+id/get_off"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/my_button2"
                    android:text="Get Off"
                    android:textAppearance="@style/TextAppearance.AppCompat" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animationCache="false"
                android:gravity="center_vertical|fill_horizontal">

                <Button
                    android:id="@+id/get_ahead"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/my_button6"
                    android:text="Get Ahead"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <Button
                    android:id="@+id/get_along"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/my_button4"
                    android:text="Get Along With"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animationCache="false"
                android:gravity="center_vertical|center_horizontal">

                <Button
                    android:id="@+id/get_on"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/my_button7"
                    android:text="Get On"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <Button
                    android:id="@+id/get_over"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/my_button"
                    android:text="Get Over"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/turn"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/my_button2"
            android:text="Turn"
            android:visibility="visible" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal">

        <Button
            android:id="@+id/go"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/my_button4"
            android:text="go"
            android:visibility="visible" />

        <Button
            android:id="@+id/give"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/my_button6"
            android:text="give"
            android:visibility="visible" />
    </TableRow>

</TableLayout>